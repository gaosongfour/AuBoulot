@model AuBoulot.Web.Models.JobOpportunity



@{
    ViewData["Title"] = "Create";
}
@{
    var parentCompany = (Company)ViewData["company"];
 
    }

    <h2>Create New JobOpportunity for Company @parentCompany.SimpleName</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Source" class="control-label"></label>
                    <input asp-for="Source" class="form-control" />
                    <span asp-validation-for="Source" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MinSalary" class="control-label"></label>
                    <input asp-for="MinSalary" class="form-control" />
                    <span asp-validation-for="MinSalary" class="text-danger"></span>
                    <label asp-for="MaxSalary" class="control-label"></label>
                    <input asp-for="MaxSalary" class="form-control" />
                    <span asp-validation-for="MaxSalary" class="text-danger"></span>
                </div>
                <div class="form-group">
                   
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">                     
                    <input asp-for="ParentCompanyId" value="@parentCompany.Id" type="hidden" />                   
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

